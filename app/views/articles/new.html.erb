<h1> Create an article</h1>

  <%=form_for @article do |form| %>
    <p>
      <%= form.label :title %> <br/>
      <%= form.text_field :title %>
    <p>
      <%= form.label :description %> <br/>
      <%= form.text_area :description %>
    </p>
    <p>
      <%= form.submit %>
    </p>
    </p>
<% end %>